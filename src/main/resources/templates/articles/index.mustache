{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#articleList}} <!-- model에 등록된 데이터는 #을 통하여 가져올 수 있음. -->
    <!-- 위의 articleList가 1개가 아닌 묶음의 데이터이기 때문에 model의 범위 내에서 코드가 데이터의 갯수만큼 반복 실행된다. (1개일땐 1번 실행)-->
    <!-- 데이터가 많다면 한줄 한줄 한줄 반복하여 코드를 실행하기 때문에 순차적으로 데이터 처리가 이루어진다. -->
    <tr>
        <th>{{id}}</th>
        <td><a href="/articles/{{id}}">{{title}}</a></td>
        <td>{{content}}</td>
    </tr>
    {{/articleList}} <!-- model의 데이터를 사용할 범위 마지막에 그만 사용하겠다는 선언을 해줘야한다. -->
    </tbody>
</table>

<a href="/articles/new">New Article</a>

{{>layouts/footer}}