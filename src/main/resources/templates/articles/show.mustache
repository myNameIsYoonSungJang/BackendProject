{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}} <!-- model에 등록된 데이터는 #을 통하여 가져올 수 있음. -->
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}} <!-- model의 데이터를 사용할 범위 마지막에 그만 사용하겠다는 선언을 해줘야한다. -->
    </tbody>
</table>

<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<!-- html에서 post, get만 지원하고 update와 delete는 지원하지 않음. -->
<!-- 하여 get을 지원하는 a태그 즉 link 사용 -->
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a>

<a href="/articles">Go to Article List</a>

{{>layouts/footer}}